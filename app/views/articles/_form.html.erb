<div class="container">
  <%= simple_form_for [@article] do |form| %>

    <% if @article.errors.any? %>
      <div id="error_explanation">
        <h2>
          <%= pluralize(@article.errors.count, "error") %> prohibited
          this article from being saved:
        </h2>
        <ul>
          <% @article.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <p>
      <%= form.input :title %><br>
    </p>

    <p>
      <%= form.input :subtitle %><br>
    </p>

    <div class="form-group">
      <%= form.input :text, :as => :ckeditor, input_html: {:ckeditor => {:toolbar => 'FULL'}}, class: "form-control" %>
    </div>

    <%= form.input :photo %>
    <%= form.input :photo_cache, as: :hidden %>


    <p>
      <%= form.submit "post article", class: "btn btn-success"%>
    </p>

  <% end %>
</div>
