
<div class="minheight">
  <div class="container">
    <div class="article-show-text-section">
      <div class="row">
        <div class="col-xs-12 col-lg-4">
          <div class="banner banner-xsmall" style="background-image: linear-gradient(-225deg, rgba(0, 0, 0, 0) 0%, rgba(0,0,0,0) 50%), url('<%= cl_image_path @article.photo %>');="">
          </div>
        </div>
        <div class="col-xs-12 col-lg-8">
          <h1><%= @article.title %></h1>
          <h2><%= @article.subtitle %></h2>
          <div class="article-published">
            <%= "Published on " + @article.created_at.strftime("%d %b %Y") %>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-xs-12">
          <p><%= raw (@article.text) %></p>
        </div>
      </div>
      <!-- <h2>Comments</h2> -->
      <%# render @article.comments %>

      <!-- <h2>Add a comment:</h2> -->
      <%# render 'comments/form' %>
      <div class="article-actions">
        <%= link_to 'Back', articles_path, class: "btn btn-default" %>
        <% if policy(Article).edit? %>
          <%= link_to "Edit", edit_article_path(@article), class: "btn btn-primary" %>
        <% end %>
        <% if policy(Article).destroy? %>
          <%= link_to 'Destroy', article_path(@article), class: "btn btn-danger",
                method: :delete,
                data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </div>
    </div>
  </div>
</div>

