<div class="container">
  <p>
    <strong>Title:</strong>
    <%= @article.title %>
  </p>

  <p>
    <strong>Subtitle:</strong>
    <%= @article.subtitle %>
  </p>

  <p>
    <strong>Text:</strong>
    <%= raw (@article.text) %>
  </p>

  <!-- <h2>Comments</h2> -->
  <%# render @article.comments %>

  <!-- <h2>Add a comment:</h2> -->
  <%# render 'comments/form' %>

  <% if policy(Article).edit? %>
    <%= link_to "Edit", edit_article_path(@article) %>
  <% end %>
  <%= link_to 'Back', articles_path %>
</div>
